{
	"formatter": {
		"lineWidth": 120
	},
	"javascript": {
		"formatter": {
			"trailingCommas": "es5"
		}
	},
	"typescript": {
		"formatter": {
			"trailingCommas": "es5"
		}
	},
	"linter": {
		"rules": {
			"a11y": {
				"noSvgWithoutTitle": "off",
				"useSemanticElements": "off"
			},
			"correctness": {
				"useExhaustiveDependencies": "off",
				"noUnusedVariables": "warn",
				"noUnusedImports": "warn"
			},
			"complexity": {
				"noUselessFragments": "off"
			},
			"security": {
				"noDangerouslySetInnerHtml": "off"
			},
			"style": {
				"noNonNullAssertion": "off",
				"noExplicitAny": "warn"
			},
			"suspicious": {
				"noArrayIndexKey": "off"
			}
		}
	}
}
