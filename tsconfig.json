{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "target": "ES6",
        "module": "ESNext",
        "strict": true,
        "jsx": "preserve",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "checkJs": true,
        "outDir": "./dist",
        "rootDir": "./src"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}